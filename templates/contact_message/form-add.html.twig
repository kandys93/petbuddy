{% block title %}PetBuddy{% endblock %}

{% block body %}

    <div class="row">
        {% for message in app.flashes('contact_add_success') %}
            <div class="alert alert-success" role="alert">
            Felicitation!! {{ message }}
    </div>
        {% endfor %}
    
    <h1> Envoyer un Message</h1> 
        
        {{ form_start(formContactMessage) }}
            <div class="row">
                {{ form_label(formContactMessage.users, 'Membre N°') }}
